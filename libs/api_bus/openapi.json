{
  "openapi": "3.0.3",
  "info": {
    "title": "ZenithAlgo API Bus",
    "version": "0.1.0",
    "description": "最小可用 API 总线：触发回测/扫参与任务查询"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "健康检查",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/v1/backtest": {
      "post": {
        "summary": "触发回测任务",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RunRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "任务已入队",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/sweep": {
      "post": {
        "summary": "触发扫参任务",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RunRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "任务已入队",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/tasks/{task_id}": {
      "get": {
        "summary": "查询任务状态",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "任务信息",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Task"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/runs": {
      "get": {
        "summary": "查询结果索引",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "task_id",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "symbol",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "from",
            "in": "query",
            "schema": {
              "type": "string",
              "description": "RFC3339 时间"
            }
          },
          {
            "name": "to",
            "in": "query",
            "schema": {
              "type": "string",
              "description": "RFC3339 时间"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "结果索引列表"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RunRequest": {
        "type": "object",
        "properties": {
          "config": {
            "type": "string"
          },
          "top_n": {
            "type": "integer"
          }
        }
      },
      "TaskResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "task_id": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "Task": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "attempts": {
            "type": "integer"
          },
          "max_retries": {
            "type": "integer"
          }
        }
      }
    }
  }
}
